<center><h1>Private Posts</h1></center>
<center>There are <%= Article.private_count %> articles privated</center>
<center><%@articles.each do |article| %>
    <% if article.private?%>
    <div class="Article">
      <h2><%=link_to article.title, article%> </h2>
      <h4>By <%= article.author %> </h4>
      <body><%=article.body.truncate(300) %>...<body>
    </div>
    </br>
  <% end %>
<% end %></center>