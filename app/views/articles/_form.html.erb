<%= form_with model: @article do |f| %>
  <div class="was-validated">
    <div class="card-body">

      <div class="col-md-4">
        <%= f.label :title, { class: "form-label"} %>
        <%= f.text_field :title, { class: "form-control is-valid", id: "validationServer01", placeholder: "This is the best site ever!", required: true} %>
        <div class="invalid-feedback">
          Your article must have a title
        </div>
      </div>

      <div class="col-md-4">
        <%= f.label :author, { class: "form-label"} %>
        <%= f.text_field :author, { class: "form-control is-valid", id: "validationServer01", placeholder: "Callum the Wise", required: true} %>
        <div class="invalid-feedback">
          Your name must be on the article
        </div>
      </div>

      <div class="col-md-4">
        <%= f.label :body, { class: "form-label"} %>
        <%= f.text_field :body, { class: "form-control", placeholder: "This site is so good...",  minlength: 10, required: true} %>
        <div class="invalid-feedback">
          Your body must be at least 10 characters long
        </div>  
      </div>

      <div class="col-md-3">
        <%= f.label :status, { class: "form-label"} %>
        <%= f.select :status, options_for_select([[
          "public", "public"], 
          ["archived", "archived"],
          ["private", "private"]]), 
          {}, { class: "form-select is-invalid", required: true } %>
        <div class="invalid-feedback">
          Your article must have a status
        </div>  

      <%= f.submit "Submit", class: "btn btn-primary" %>

    </div>
  </div>
<% end %>