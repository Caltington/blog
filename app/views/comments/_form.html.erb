<%= form_with model: [ @article, @article.comments.build ] do |f| %>
  <div class="was-validated">
    <div class="card-body">

      <div class="col-md-4">
        <%= f.label :commenter, { class: "form-label"} %>
        <%= f.text_field :commenter, { class: "form-control is-valid", id: "validationServer01", placeholder: "Dave the Third", maxlength: 30, required: true} %>
        <div class="invalid-feedback">
          Your name must be on the comment and below 30 characters
        </div>
      </div>

      <div class="col-md-4">
        <%= f.label :body, { class: "form-label"} %>
        <%= f.text_field :body, { class: "form-control", placeholder: "What an inspiring post...",  minlength: 3, maxlength: 250, required: true} %>
        <div class="invalid-feedback">
          Your comment must be at least 3 characters long
        </div>  
      </div>

      <div class="col-md-3">
        <%= f.label :status, { class: "form-label"} %>
        <%= f.select :status, options_for_select([[
          "public", "public"]]), 
          {}, { class: "form-select is-invalid", required: true } %>
        <div class="invalid-feedback">
          Your comment must have a status
        </div>  

      <%= f.submit "Submit", class: "btn btn-primary" %>

    </div>
  </div>
<% end %>