<%= form_with model: [ @article, @article.comments.build ] do |form| %>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter, placeholder: "Dave the second" %>
  </p>
  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body, placeholder: "What a great post!" %>
  </p>
  
  <p>
    <!-- <%= form.label :status %><br> -->
    <%= form.select :status, selected: 'public' %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>